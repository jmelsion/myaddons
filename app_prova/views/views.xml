    <!-- Top menu item -->

    <menuitem name="Listado de Tareas" id="app_prova.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Opciones Lista Tareas" id="app_prova.menu_1" parent="app_prova.menu_root"/>

    <!-- actions -->

    <menuitem name="Mostrar Lista" id="app_prova.menu_1_list" parent="app_prova.menu_1"
              action="app_prova.action_window"/>

  </data>
</odoo>